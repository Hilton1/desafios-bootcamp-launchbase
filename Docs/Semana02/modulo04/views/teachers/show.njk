{% extends "layout.njk" %}

{% block head %}
  <title>Teachers</title>
{% endblock head %}

{% block content %}
    <div class="card">
      <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
      <section class="details">
        <h3>Detalhes</h3>
        <div class="item">
          <div>Nome Completo</div>
          <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
          <div>Idade</div>
          <div>{{teacher.age}} anos</div>
        </div>

        <div class="item">
          <div>Grau de Escolaridade</div>
          <div>{{teacher.schooling}}</div>
        </div>

        <div class="item">
          <div>Tipo de Aula</div>
          <div>{{teacher.classType}}</div>
        </div>

        <div class="item">
          <div>Acompanhamento</div>
          <div>
            {% for matter in teacher.matters %}
              <span>{{matter}}</span>
            {% endfor %}
          </div>
        </div>

        <div class="item">
          <div>Desde</div>
          <div>{{teacher.created_at}}</div>
        </div>
      </section>
    </div>
{% endblock content %}