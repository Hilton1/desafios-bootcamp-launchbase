{% extends "layout.njk" %}

{% block head %}
  <title>Sobre</title>
{% endblock %}

{% block content %}
  <main>
    <div id="description">
      <img src="{{ about.image_url }}" alt="Logo da {{about.title}}">
      <h1>{{about.title}}</h1>
      <h2>{{about.description}}</h2>
      <p>{{about.subdescription}}</p>
    </div>

    <div id="techs">
      <ul>
        {% for tech in about.techs %}
          <li>{{tech.name}}</li>
        {% endfor %}
      </ul>

    </div>
  </main>
  
  <footer>
    <div class="links">
      {% for link in about.links %}
        <a href="{{link.url}}" target="_blank">{{link.name}}</a>
      {% endfor %}
    </div>
  </footer>
{% endblock %}